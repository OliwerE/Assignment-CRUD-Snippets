<!-- Displays a snippet -->
{{#if viewData.snippet}}
  <div id="showSnippetContainer">
    {{#if viewData.isOwner}}
    <!-- Ska bara visas om Ã¤garen! -->
    <div id="removeDeleteUpdate">
        <ul id="snippetOwnerNav">
          <a href="/crud/snippets/{{viewData.snippet.id}}/edit"><li class="snippetOwnerNavItem">Edit</li></a>
          <a href="/crud/snippets/{{viewData.snippet.id}}/remove"><li class="snippetOwnerNavItem">Remove</li></a>
        </ul>
    </div>
    {{/if}}
    <h1>{{viewData.snippet.name}}</h1>
    <div id="showSnippetCodeContainer">
      <pre><code>{{viewData.snippet.snippet}}</code></pre>
    </div>
    <div id="dateData">
      <p>Created: {{viewData.snippet.createdAt}} | Last modified: {{viewData.snippet.updatedAt}}</p>
    </div>
  </div>
{{/if}}
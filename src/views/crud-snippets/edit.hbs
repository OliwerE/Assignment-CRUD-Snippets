<div id="main">
    <h1 class="pageHeader">Update: {{viewData.snippet.name}}</h1>
    <form id="snippetForm" method="post" action="/crud/snippets/{{viewData.snippet.id}}/update">
        <!-- validation summary hbs hÃ¤r! -->
        <div class="form-group">
            <label for="name">Snippet Name:</label>
            <input type="text" name="name" value="{{viewData.snippet.name}}" placeholder="Enter snippet name" required="required"/>
        </div>
        <textarea rows="4" cols="50" name="snippet" form="snippetForm" required="required">{{viewData.snippet.snippet}}</textarea>
        <br>
        <button type="submit">Update Snippet</button>
    </form>
</div>